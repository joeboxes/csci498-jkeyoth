		let Y[0] = 50;
		let Y[1] = 100;
		let Y[2] = 150;
		let Y[3] = 200;
		
		let X[0] = 50;
		let X[1] = 100;
		let X[2] = 150;
		let X[3] = 200;
		
		let grid = Grid.new();
		
		do grid.setGoal(7,8);
		
		let goal = V2D.new(7,8);
		
		let pos = V2D.new(1,1);
		let vel = V2D.empty();
		
		while (contin)
		{
			let moving = false;
			
			let key = Keyboard.readChar();
			
			do Output.printInt(pos.getX());
			
			if(key = 131)//up
			{
				do vel.set(0,-1);
				let moving = true;
			}
			if(key = 133)//down
			{
				do vel.set(0,1);
				let moving = true;
			}
			if(key = 130)//left
			{
				do vel.set(-1,0);
				let moving = true;
			}
			if(key = 132)//right
			{
				do vel.set(1,0);
				let moving = true;
			}
			
			if(key = 81)//q
			{
				let contin = false;
			}
			
			
			if(moving)
			{
				do Main.move();
			}
			else
			{
				if(~key = 0)
				{
					do Main.draw9();
				}
			}
		}
		
		return;
	}
}
